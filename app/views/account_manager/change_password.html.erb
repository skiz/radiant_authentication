<h1>Change Password</h1>

<p>Enter the following information to change your password.</p>

<p style="color:red"><%= flash[:notice] %></p>

<% form_for(:change_password) do %>
	<p><label for="old_password">Old Password</label><br/>
	<%= password_field_tag 'old_password', @old_password %></p>

	<p><label for="password">New Password</label><br/>
	<%= password_field_tag 'password' %></p>

	<p><label for="password_confirmation">Confirm New Password</label><br/>
	<%= password_field_tag 'password_confirmation' %></p>

	<p><%= submit_tag 'Change Password' %></p>
<% end %>

